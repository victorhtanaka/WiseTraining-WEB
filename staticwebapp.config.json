{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/assets/*", 
      "/*.{css,scss,js,png,jpg,jpeg,gif,svg,ico,woff,woff2,ttf,eot,json}"
    ]
  },
  "routes": [
    {
      "route": "/auth/*",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/Course/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/admin/*",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/company/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/Dashboard",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/",
      "allowedRoles": ["anonymous", "authenticated"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/auth/login",
      "statusCode": 302
    },
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "globalHeaders": {
    "cache-control": "public, max-age=31536000, immutable",
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css",
    ".html": "text/html",
    ".woff": "font/woff",
    ".woff2": "font/woff2"
  },
  "platform": {
    "apiRuntime": "node:18"
  }
}
